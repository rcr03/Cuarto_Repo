<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>Log</filter-name>
        <filter-class>mrysi.filtros.Log</filter-class>
    </filter>
    <filter>
        <filter-name>Midetiempo</filter-name>
        <filter-class>mrysi.filtros.Midetiempo</filter-class>
    </filter>
    <filter>
        <filter-name>Demo</filter-name>
        <filter-class>mrysi.filtros.Demo</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Demo</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Midetiempo</filter-name>
        <servlet-name>Calculadora</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Log</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Calculadora</servlet-name>
        <servlet-class>mrysi.filtros.Calculadora</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>mrysi.filtros.Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Calculadora</servlet-name>
        <url-pattern>/Calculadora</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/Servlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
